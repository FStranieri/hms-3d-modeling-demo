<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_window_bg"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens_30"
        android:paddingRight="@dimen/dimens_30">

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center"
            android:text="@string/download_text"
            android:textColor="@color/scan_tips_color"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center"
            android:text="@string/delete_text"
            android:textColor="@color/scan_tips_color"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_open_folder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center"
            android:text="@string/open_folder_text"
            android:textColor="@color/scan_tips_color"
            android:textSize="@dimen/dimens_16sp" />

        <TextView
            android:id="@+id/tv_render"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40"
            android:gravity="center"
            android:text="@string/render_text"
            android:textColor="@color/scan_tips_color"
            android:textSize="@dimen/dimens_16sp" />

